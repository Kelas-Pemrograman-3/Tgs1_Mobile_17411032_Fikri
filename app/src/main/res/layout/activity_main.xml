<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Biodata Ku"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/labelbio"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Masukan NPM Anda"
        android:gravity="center"
        android:textStyle="italic"
        android:id="@+id/txtnpm"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukan Nama Lengkap Anda"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/txtnama"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukan Alamat Anda"
        android:gravity="center"
        android:textStyle="normal"
        android:id="@+id/txtalamat"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukan Prodi Anda"
        android:gravity="center"
        android:id="@+id/txtprodi"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tampilkan"
        android:id="@+id/btnsubmit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvnpm"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textStyle="italic"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvnama"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvalamat"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="normal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvprodi"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

</LinearLayout>